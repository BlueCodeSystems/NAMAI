<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/referral_dialog_padding">



    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/txt_title_label"
        style="@style/CustomFontTextViewStyle.ClientList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:lines="2"
        android:paddingStart="0dp"
        android:text="Please enter the Next Contact Date"
        android:textColor="@color/text_black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_next_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/referral_dialog_padding"
        android:hint="DD/MM/YYYY"
        android:textAllCaps="false"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/text_black"
        android:textColorHint="@color/grey"
        android:textSize="20sp" />

    <Button
        android:id="@+id/save_date"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:paddingStart="@dimen/referral_dialog_padding"
        android:text="save"
        android:textAllCaps="false"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/text_black"
        android:textSize="@dimen/referral_dialog_text_size" />


</LinearLayout>